<div class="row">
  <div class="col-xs-12 col-md-6">
    <div class='home-greeting'>
      <h1>Organize bookmarks with Supurl</h1>
      <p>
        You can save links and organize them with tags.
      </p>
    </div>
  </div>

  <!-- Second half -->
  <div class="col-xs-12 col-md-6">

    <!-- Sign in -->
    <div class="well">
      <form role="form">
        <div class="form-group">
          <input type="email" class="form-control" id="InputEmail" placeholder="Enter email">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" id="InputPassword" placeholder="Password">
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-6">
            <div class="checkbox">
              <label>
                <input type="checkbox"> Remember me
              </label>
            </div>
          </div>
          <div class="col-xs-6 col-md-6">
            <div class="cautionary">
              <a href="#forgot-password">Forgot password?</a>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-default">Sign in</button>
      </form>
    </div><!--     end of well       -->

    <!-- Sign up -->
    <div class='well v-sign-up'>
    </div><!--     end of well       -->

  </div>

  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <a href='#/links/new'>new link</a>
      |
      <a href='#/links/1/edit'>edit link</a>
      |
      <a href='#/links/1'>show link</a>
      |
      <a href='#/links'>links</a>
    </div>
  </div>

</div>
